<% layout("/layouts/boilerplate") %>

    <div class="row nt-3">
        <div class="col-6 offset-3">
            <h3>Sign up </h3>
            <form action="/Signup" method="POST" class="need-validation" novalidate>
            <div class="md-3">
                    <lable for="username" class="form-label">Username</lable>
                    <input type="text" id="username" name="username" class="form-control "  required/>
                    <div class="valid-feedback">Looks good</div>
                </div>
                <div class="md-3">
                    <lable for="email" class="form-label">E-mail</lable>
                    <input type="email" id="email" name="email" class="form-control "  required/>
                    
                </div>
                <div class="md-3">
                    <lable for="password" class="form-label">Password</lable>
                    <input type="password" id="password" name="password" class="form-control "  required/>
                </div>
                <button class="btn btn-success">Signup</button>
            </form>
        </div>
        </div>